#/bin/bash

CURRENTPATH=`pwd`

sudo apt update -y
sudo apt install nodejs npm jq wget git-core sqlite3 -y
sudo mkdir -p /usr/local && cd /usr/local/
sudo git clone https://github.com/CryptoMF/frostybot-js.git frostybot-js
cd /usr/local/frostybot-js
sudo chgrp $USER -R ./*
sudo npm install --unsafe-perm
sudo ln -s /usr/local/frostybot-js/frostybot /usr/bin/frostybot

