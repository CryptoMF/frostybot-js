#/bin/bash

PID=`sudo ps ax | grep "frostybot-js" | grep -v grep | awk '{print $1}'`
CURRENTPATH=`pwd`
SCRIPTPATH=`dirname "$(readlink -f "$0")"`

if [ ! "$PID" == "" ]; then
        echo "Stopping Frostybot server (PID: $PID)..."
	cd "$SCRIPTPATH" &
        cd ../ &
        sudo npm stop > /dev/null 2>&1 &
        cd "$CURRENTPATH" &
else
	echo "Frostybot server is not currently started"
fi
