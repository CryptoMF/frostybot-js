{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "value": "westeurope"
        },
        "containerName": {
            "type": "string"
        },
        "frostybotPort": {
            "type": "int",
            "value": 80
        },
        "sshPort": {
            "type": "int",
            "value": 22
        },
        "sshUsername": {
            "type": "string",
            "value": "frostybot"
        },
        "sshPassword": {
            "type": "secureString"
        },
        "ports": {
            "type": "array",
            "value": [
                {
                    "port": "80",
                    "protocol": "TCP"
                },
                {
                    "port": "22",
                    "protocol": "TCP"
                }
            ]
        }        
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "frostyio/frostybot-js:latest",
                            "resources": {
                                "requests": {
                                    "cpu": "1",
                                    "memoryInGB": "0.5"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "SSH_USER",
                                    "value": "[parameters('sshUsername')]"
                                },
                                {
                                    "name": "SSH_PASS",
                                    "secureValue": "[parameters('sshPassword')]"
                                },
                                {
                                    "name": "SSH_PORT",
                                    "value": "[parameters('sshPort')]"
                                },
                                {
                                    "name": "FROSTYBOT_PORT",
                                    "value": "[parameters('frostybotPort')]"
                                }
                            ],
                            "ports": "[parameters('ports')]"
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": "[parameters('ports')]",
                    "dnsNameLabel": "[parameters('containerName')]"
                }
            },
            "tags": {}
        }
    ]
}